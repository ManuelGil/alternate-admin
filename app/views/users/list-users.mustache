{{$ content }}
<label class="section-title">List Users</label>
<p class="mg-b-20 mg-sm-b-40">List of users</p>

<div id="app" class="table-responsive">
    <table id="table" class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>id</th>
                <th>username</th>
                <th>email</th>
                <th>city</th>
                <th>country</th>
                <th>lastaccess</th>
                <th>confirmed</th>
                <th>mnethostid</th>
                <th>suspended</th>
                <th>firstnamephonetic</th>
                <th>lastnamephonetic</th>
                <th>middlename</th>
                <th>alternatename</th>
                <th>firstname</th>
                <th>lastname</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="user in users">
                <td>${ user.id }</td>
                <td>${ user.username }</td>
                <td>${ user.email }</td>
                <td>${ user.city }</td>
                <td>${ user.country }</td>
                <td>${ user.lastaccess | date }</td>
                <td>${ user.confirmed }</td>
                <td>${ user.mnethostid }</td>
                <td>${ user.suspended }</td>
                <td>${ user.firstnamephonetic }</td>
                <td>${ user.lastnamephonetic }</td>
                <td>${ user.middlename }</td>
                <td>${ user.alternatename }</td>
                <td>${ user.firstname }</td>
                <td>${ user.lastname }</td>
            </tr>
        </tbody>
    </table>
</div>
{{/ content }}

{{$ scripts }}
{{! development version, includes helpful console warnings }}
<link href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet"
    type="text/css">
<script src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js"
    type="text/javascript"></script>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

<script>
    new Vue({
        el: '#app',
        delimiters: ['${', '}'],
        data: function () {
            return {
                users: []
            }
        },
        created: function () {
            this.load()
        },
        mounted: function () {
            new DataTable('#table')
        },
        methods: {
            load: function () {
                this.users = JSON.parse("{{{ users }}}")
            }
        },
		filters: {
			date: function (value) {
				return new Date(value * 1000).toString()
			}
        }
    })
</script>
{{/ scripts }}
{{/ layout }}
