{{$ content }}
<label class="section-title">Admins</label>
<p class="mg-b-20 mg-sm-b-40">List of admins</p>

<div id="app" class="table-responsive">
    <table id="table" class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>id</th>
                <th>username</th>
                <th>email</th>
                <th>city</th>
                <th>country</th>
                <th>lastaccess</th>
                <th>confirmed</th>
                <th>mnethostid</th>
                <th>suspended</th>
                <th>firstnamephonetic</th>
                <th>lastnamephonetic</th>
                <th>middlename</th>
                <th>alternatename</th>
                <th>firstname</th>
                <th>lastname</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in items">
                <td>${ item.id }</td>
                <td>${ item.username }</td>
                <td>${ item.email }</td>
                <td>${ item.city }</td>
                <td>${ item.country }</td>
                <td>${ item.lastaccess }</td>
                <td>${ item.confirmed }</td>
                <td>${ item.mnethostid }</td>
                <td>${ item.suspended }</td>
                <td>${ item.firstnamephonetic }</td>
                <td>${ item.lastnamephonetic }</td>
                <td>${ item.middlename }</td>
                <td>${ item.alternatename }</td>
                <td>${ item.firstname }</td>
                <td>${ item.lastname }</td>
            </tr>
        </tbody>
    </table>
</div>
{{/ content }}

{{$ scripts }}
{{! development version, includes helpful console warnings }}
<link href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet"
    type="text/css">
<script src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js"
    type="text/javascript"></script>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

<script>
    new Vue({
        el: '#app',
        delimiters: ['${', '}'],
        data: function () {
            return {
                items: []
            }
        },
        created: function () {
            this.load()
        },
        mounted: function () {
            new DataTable('#table')
        },
        methods: {
            load: function () {
                this.items = JSON.parse("{{{ items }}}")
            }
        }
    })
</script>
{{/ scripts }}
