{{$ content }}
<label class="section-title">Users</label>
<p class="mg-b-20 mg-sm-b-40">Lists "loggedin users" from the last 120 days</p>

<div id="app" class="table-responsive">
    <table id="table" class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>id</th>
                <th>username</th>
                <th>email</th>
                <th>firstname</th>
                <th>lastname</th>
                <th>lastlogin</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in items">
                <td>${ item.id }</td>
                <td>${ item.username }</td>
                <td>${ item.email }</td>
                <td>${ item.firstname }</td>
                <td>${ item.lastname }</td>
                <td>${ item.lastlogin | date }</td>
            </tr>
        </tbody>
    </table>
</div>
{{/ content }}

{{$ scripts }}
{{! development version, includes helpful console warnings }}
<link href="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet"
    type="text/css">
<script src="https://cdn.jsdelivr.net/npm/vanilla-datatables@latest/dist/vanilla-dataTables.min.js"
    type="text/javascript"></script>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

<script>
    new Vue({
        el: '#app',
        delimiters: ['${', '}'],
        data: function () {
            return {
                items: []
            }
        },
        created: function () {
            this.load()
        },
        mounted: function () {
            new DataTable('#table')
        },
        methods: {
            load: function () {
                this.items = JSON.parse("{{{ items }}}")
            }
        },
		filters: {
			date: function (value) {
				return new Date(value * 1000).toString()
			}
        }
    })
</script>
{{/ scripts }}
{{/ layout }}
